<div class="card registraion-flame col-md-8 mx-auto">
  <div class="card-body">
    <div class="user-title">
      <h1>ログイン</h1>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="d-inline-flex flex-column col-md-6">
        <%= f.label :メールアドレス, class: 'user-label-name' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "user-form" %>

        <%= f.label :パスワード, class: 'user-label-name' %>
        <%= f.password_field :password, autocomplete: "current-password", class: "user-form" %>

        <% if devise_mapping.rememberable? %>
          <div>
            <%= f.check_box :remember_me %>
            <%= f.label :パスワードを保存する %>
          </div>
        <% end %>
        <%= f.submit "ログインする", class: "user-button" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>